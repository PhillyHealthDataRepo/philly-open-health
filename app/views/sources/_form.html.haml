.form-horizontal
  = form_for @source do |f|
    - if @source.errors.any?
      #error_explanation
        %h2= "#{pluralize(@source.errors.count, "error")} prohibited this source from being saved:"
        %ul
          - @source.errors.full_messages.each do |msg|
            %li= msg

    .form-group
      = f.label :name, class: "col-sm-2 control-label"
      .col-sm-9
        = f.text_field :name
    .form-group
      = f.label :description, class: "col-sm-2 control-label"
      .col-sm-9
        = f.text_area :description
    .form-group
      = f.label :homepageurl, class: "col-sm-2 control-label"
      .col-sm-9
        = f.text_field :homepageurl
    .actions.col-sm-offset-2.col-sm-9
      = f.submit 'Save', class: "btn btn-large btn-info"
