= form_for @tag do |f|
  - if @tag.errors.any?
    #error_explanation
      <h2> "#{pluralize(@tag.errors.count, "error")} prohibited this tag from being saved:" </h2>
      <ul>
        - @tag.errors.full_messages.each do |msg|
          <li> msg </li>
		  
	  </ul>
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
